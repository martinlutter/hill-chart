{
  "name": "hill-chart",
  "private": true,
  "version": "0.1.0",
  "description": "Browser extension that embeds interactive Hill Charts into GitHub issue pages",
  "author": "Martin Lutter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/martinlutter/hill-chart"
  },
  "keywords": ["hill-chart", "github", "browser-extension", "chrome-extension", "firefox-extension"],
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:firefox": "vite build --config vite.firefox.config.ts && cd dist-firefox && zip -r dist-firefox.xpi . && cd ..",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "npm run build && playwright test",
    "typecheck": "tsc -b",
    "lint": "eslint .",
    "pack:source": "bash scripts/pack-source.sh"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.33",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@stylistic/eslint-plugin": "^5.9.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.37",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/webextension-polyfill": "^0.12.5",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^28.1.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
