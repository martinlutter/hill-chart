{
  "manifest_version": 3,
  "name": "Hill Chart for GitHub",
  "version": "0.1.0",
  "description": "Add Basecamp-style Hill Charts to GitHub issues",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "pushstate-patch.js"],
      "matches": ["https://github.com/*"]
    }
  ]
}
